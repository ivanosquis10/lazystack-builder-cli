{
	"name": "lazy-stack-builder",
	"version": "1.0.0",
	"description": "A CLI tool to build a lazy stack with TypeScript, Node.js, and Clack prompts",
	"type": "module",
	"main": "dist/index.js",
	"scripts": {
		"start": "node dist/index.js",
		"build": "tsdown",
		"dev": "tsdown --watch",
		"check-types": "tsc --noEmit",
		"check": "biome check --write ./src"
	},
	"bin": {
		"lazy-stack-builder": "./dist/index.js"
	},
	"keywords": [
		"cli",
		"typescript",
		"nodejs",
		"clack-prompts",
		"lazy-stack-builder",
		"tsdown",
		"biome",
		"prompts",
		"command-line-tool",
		"nestjs"
	],
	"author": "ivanosquis10",
	"license": "MIT",
	"dependencies": {
		"@clack/prompts": "^0.11.0",
		"fs-extra": "^11.3.0",
		"picocolors": "^1.1.1"
	},
	"devDependencies": {
		"@biomejs/biome": "2.1.2",
		"@types/fs-extra": "^11.0.4",
		"@types/node": "^24.1.0",
		"tsdown": "^0.13.0",
		"typescript": "^5.8.3"
	}
}
